<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardElevation="@dimen/card_elevation"
    app:cardCornerRadius="@dimen/card_corner_radius"
    android:layout_margin="@dimen/episode_item_separation">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/medium_distance">

        <TextView
            android:id="@+id/episode_name"
            style="@style/NormalText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:text="S01E01 - Pilot"
            app:layout_constraintTop_toTopOf="parent"/>

        <TextView
            android:id="@+id/episode_air_date"
            style="@style/SecondaryText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:text="December 2, 2013"
            android:paddingTop="@dimen/xshort_distance"
            app:layout_constraintTop_toBottomOf="@id/episode_name"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</com.google.android.material.card.MaterialCardView>
<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="@dimen/card_corner_radius"
        app:cardElevation="@dimen/card_elevation"
        android:layout_marginHorizontal="@dimen/xlarge_distance"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/modal_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="@dimen/large_distance"
            android:background="@android:color/transparent">

            <ImageView
                android:id="@+id/iv_icon"
                android:layout_width="@dimen/modal_icon_size"
                android:layout_height="@dimen/modal_icon_size"
                android:layout_marginTop="@dimen/large_distance"
                android:visibility="gone"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"/>

            <TextView
                android:id="@+id/tv_modal_title"
                style="@style/LargeText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:text="Modal title"
                android:textStyle="bold"
                android:gravity="center"
                android:layout_marginTop="@dimen/medium_distance"
                android:padding="@dimen/medium_distance"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/iv_icon"/>

            <TextView
                android:id="@+id/tv_modal_subtitle"
                style="@style/NormalText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:text="Modal subtitle"
                android:textStyle="bold"
                android:gravity="center"
                android:layout_marginHorizontal="@dimen/medium_distance"
                android:paddingHorizontal="@dimen/xlarge_distance"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_modal_title"/>

            <Button
                style="@style/PrimaryButton"
                android:id="@+id/btn_positive_action"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="Genial"
                android:layout_marginTop="@dimen/xlarge_distance"
                app:layout_constraintTop_toBottomOf="@id/tv_modal_subtitle"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>

            <Button
                style="@style/SecondaryButton"
                android:id="@+id/btn_negative_action"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/xshort_distance"
                tools:text="Cancelar"
                android:textAllCaps="false"
                android:textColor="@color/purple_500"
                android:visibility="gone"
                app:layout_constraintTop_toBottomOf="@id/btn_positive_action"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </com.google.android.material.card.MaterialCardView>

</androidx.constraintlayout.widget.ConstraintLayout>